<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--    Asset Contract Create-->
 
    <record id='asset_log_fuel_view_form' model='ir.ui.view'>
        <field name="name">asset.log.fuel.cost.form</field>
        <field name="model">asset.log.fuel.cost</field>
        <field name="arch" type="xml">
            <form string="Fuel Logs">
                <sheet>
                    <group>
                        <group string="Asset Details">
                            <field name="asset_id"/>
                        </group>
                        <group string="Refueling Details">
                            <field name="liter"/>
                            <field name="price_per_liter"/>
                            <field name="amount"/>
                        </group>
                    </group>
                    <group>
                        <group string="Odometer Details">
                            <label for="odometer"/>
                            <div class="o_row">
                                <field name="odometer"/>
                                <field name="odometer_unit"/>
                            </div>
                        </group>
                        <group string="Additional Details">
                            <field name="date" />
                            <field name="purchaser_id" />
                            <field name="inv_ref" />
                            <field name="vendor_id"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Write here any other information"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id='asset_log_fuel_view_tree' model='ir.ui.view'>
        <field name="name">asset.log.fuel.cost.tree</field>
        <field name="model">asset.log.fuel.cost</field>
        <field name="arch" type="xml">
            <tree string="Fuel Logs">
                <field name="date" />
                <field name="asset_id" />
                <field name="purchaser_id" />
                <field name="inv_ref" invisible="1"/>
                <field name="vendor_id" invisible="1"/>
                <field name="odometer" />
                <field name="odometer_unit" />
                <field name="liter" />
                <field name="price_per_liter" invisible="1"/>
                <field name="amount" sum="Price"/>
            </tree>
        </field>
    </record>

    <record id='asset_log_fuel_view_kanban' model='ir.ui.view'>
        <field name="name">asset.log.fuel.cost.kanban</field>
        <field name="model">asset.log.fuel.cost</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="asset_id"/>
                                    <span class="float-right"><field name="date"/></span>
                                </strong>
                            </div>
                            <div>
                                <span><field name="purchaser_id"/></span>
                            </div>
                            <div>
                                <span><field name="liter"/> Liter</span>
                                <span class="float-right"><field name="amount"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='asset_log_fuel_view_search' model='ir.ui.view'>
        <field name="name">asset.log.fuel.cost.search</field>
        <field name="model">asset.log.fuel.cost</field>
        <field name="arch" type="xml">
            <search string="Vehicles Fuel Logs" >
                <field name="asset_id" />
                <field name="date"/>
                <field name="purchaser_id" />
                <field name="liter" />
                <field name="amount" sum="Price"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_vehicle" context="{'group_by' : 'asset_id'}" string="Asset"/>
                </group>
            </search>
        </field>
    </record>

    <record id="asset_log_fuel_view_graph" model="ir.ui.view">
       <field name="name">asset.log.fuel.cost.graph</field>
       <field name="model">asset.log.fuel.cost</field>
       <field name="arch" type="xml">
            <graph string="Fuel Costs Per Month">
                <field name="asset_id" type="row"/>
<!--                <field name="cost_amount" type="measure"/>-->
            </graph>
        </field>
    </record>

    <record id='asset_log_fuel_action' model='ir.actions.act_window'>
        <field name="name">Assets Fuel Logs</field>
        <field name="res_model">asset.log.fuel.cost</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="context">{"search_default_groupby_vehicle" : True}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new fuel log
          </p><p>
            Here you can add refuelling entries for all Assets.
          </p>
        </field>
    </record>

    <menuitem action="asset_log_fuel_action" parent="menu_action_admin_asset_asset_form" id="asset_cost_log_fuel_menu" sequence="5"/>

<!--    Asset Contract End  -->
    <record id='asset_contract_view_form' model='ir.ui.view'>
        <field name="name">contract.asset.form</field>
        <field name="model">contract.asset</field>
        <field name="arch" type="xml">
            <form string="Contract logs">
                <header>
                    <button name="contract_close" states="open,diesoon,expired,future" type="object" class="oe_highlight" string="Close Contract" groups="fleet.fleet_group_manager"/>
                    <button name="contract_open" states="closed" type="object" class="oe_highlight" string="Set Contract In Progress" groups="fleet.fleet_group_manager"/>
                    <button class="oe_highlight" name="act_renew_contract" type="object" string="Renew Contract" attrs="{'invisible': [('state', '=', 'open')]}" help="Create a new contract automatically with all the same informations except for the date that will start at the end of current contract" groups="fleet.fleet_group_manager"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
<!--                    <field name="currency_id" invisible="1"/>-->
                    <group col="2">
                        <group string="">
                            <field name="active" invisible="1"/>
                            <field name="ins_ref"/>
                            <field name="type"/>
<!--                            <field name="cost_subtype_id" required="1" domain="['|',('category','=','contract'),('category','=','both')]"/>-->
                            <field name="insurer_id"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Asset Information">
                            <field name="asset_id" string="Asset"/>
                            <field name="purchaser_id"/>
                            <label for="odometer"/>
                            <div class="o_row">
                                <field name="odometer"/>
<!--                                <field name="odometer_unit"/>-->
                            </div>
                        </group>
                    </group>
                    <group col="2">
                        <group>
                            <field name="activation_amount" string="Activation Cost" help="Cost that is paid only once at the creation of the contract" widget="monetary"/>
                            <label for="cost_generated"/>
                            <div class="o_row">
                                <field name="cost_generated" attrs="{'invisible': [('cost_frequency','=','no')]}" widget="monetary"/>
                                <field name="cost_frequency"/>
                            </div>
                        </group>
                        <group>
                            <field name="date" string="Invoice Date"/>
                            <field name="start_date"/>
                            <field name="expiration_date"/>
<!--                            <field name="expiration_date" attrs="{'required': [('cost_frequency', '!=', 'no')]}"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Included Services">
                            <group>
                                <field name="included_services">
                                    <tree editable="bottom">
                                        <field name="service_description" string="Service Description"/>
                                        <field name="amount" sum="Price" string="Indicative Cost" widget="monetary"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                    <group string="Terms and Conditions">
                        <field name="notes" nolabel="1" placeholder="Write here all other information relative to this contract" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                </div>
            </form>
        </field>
    </record>

